<?xml version="1.0"?>
<ruleset name="React for WordPress">
	<description>WordPress Coding Standards with custom overrides</description>
	
	<!-- Files to check -->
	<file>.</file>
	
	<!-- Exclude vendor and node_modules -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/build/*</exclude-pattern>
	
	<!-- PHP version compatibility -->
	<config name="testVersion" value="8.0-"/>
	
	<!-- Use WordPress coding standards -->
	<rule ref="WordPress">
		<!-- Allow short array syntax -->
		<exclude name="Universal.Arrays.DisallowShortArraySyntax" />
		
		<!-- Allow short ternary operators -->
		<exclude name="Universal.Operators.DisallowShortTernary" />
		
		<!-- Allow flexible file naming -->
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase" />
		<exclude name="WordPress.Files.FileName.InvalidClassFileName" />
		
		<!-- Allow normal conditional syntax -->
		<exclude name="WordPress.PHP.YodaConditions.NotYoda" />
		
		<!-- Relax variable commenting requirements -->
		<exclude name="Squiz.Commenting.VariableComment" />
	</rule>
</ruleset>